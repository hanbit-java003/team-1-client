<div class="content-wrapper">
    <div class="user-info">
        <div id="user-img" class="img-circle" style="background-image: url({{userImg}})"></div>
        <div id="user-name">{{userName}}</div>
        <ul class="user-achievement">
            {{~#each achievement~}}
                <li class="achievement-icon" style="background-image: url({{emblem}})">
                    <span class="achievement-tooltip">{{achieve}}</span>
                </li>
            {{~/each~}}
        </ul>
        <div class="card-setting">
            <i class="fa fa-ellipsis-v"></i>
            <ul class="setting-menu">
                <li>수정</li>
                <li>삭제</li>
            </ul>
        </div>
    </div>
    <div class="food-img-wrapper">
        <img id="food-img" class="img-responsive" src='{{foodImg}}'>
    </div>
    <div class="food-text">
        {{~#each eaten~}}
            <li class="food-eaten">{{menu}}</li>
        {{~/each~}}
        <div class="food-detail card-closed">
            {{{detail}}}
            <div class="food-tag">
                {{~#each tag~}}
                    <li>#{{item}}</li>
                {{~/each~}}
            </div>
        </div>
    </div>
    <ul class="food-icon">
        <li>
            <i class="food-like fa fa-heart-o"></i>
            <span class="food-like-count" style="font-size: 12px;font-weight: bold;">{{likeCount}}</span>
        </li>
        <li>
            <i class="food-trash fa fa-trash-o"></i>
            <span class="food-trash-count" style="color: #666;font-size: 12px;font-weight: bold;">{{trashCount}}</span>
        </li>
        <li><i class="food-report fa fa-ban"></i></li>
    </ul>
    <a class="btn-more">더 보기</a>
</div>
