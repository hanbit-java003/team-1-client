<!-- 맛집 누르면 들어오는 화면 -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>detail</title>
</head>
<body>
{{> template/header}}
<section class="cock-detail">
    <ul class="detail-sort-wrapper">
        <li id="detail-sort-latest" class="active">최신순</li>
        |
        <li id="detail-sort-likes">인기순</li>
    </ul>
    <div class="cock-wrapper">
        <div id="cock-restaurants-left" class="cock-restaurants">
            <!-- template restaurants.hbs 홀수 -->
        </div>
        <div id="cock-restaurants-right" class="cock-restaurants">
            <!-- template restaurants.hbs 짝 -->
        </div>
        <div id="cock-restaurants-mobile" class="cock-restaurants">
            <!-- template restaurants.hbs 전부 -->
        </div>
    </div>
    <div class="fotorama-wrap detail-gallery-wrapper">
        <div class="fotorama"
             data-width="700"
             data-ratio="3/2"
             data-nav="thumbs"
             data-thumbheight="48">

        </div>
    </div>
    <button class="go-top-btn">
        <i class="fa fa-chevron-up"></i>
    </button>
</section>
{{> template/footer}}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
<script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script>
</body>
</html>
